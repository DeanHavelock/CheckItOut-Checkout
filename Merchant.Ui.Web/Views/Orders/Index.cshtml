@model Merchant.Domain.ViewModels.CheckoutViewModel
@{
    ViewData["Title"] = "Our Store - Checkout Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Our Store</h1>
    <p>The Everything Store.</p>
</div>
@using (Html.BeginForm("Post", "Orders", FormMethod.Post))
{
    @Html.DisplayForModel(Model)
}
<iframe title="Payment Wep App" src="https://localhost:44379/checkout/create?invoiceId=@Model.InvoiceId&orderId=@Model.OrderId&amount=@Model.TotalCost&recipientMerchantId=@Model.SellerMerchantId" style="width: 100%; height: 260px;"></iframe>

